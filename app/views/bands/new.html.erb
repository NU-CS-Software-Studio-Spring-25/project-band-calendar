<div class="container mt-4">
  <h1 class="text-white">Add New Band</h1> 

  <%= render 'shared/flash_messages' %>

  <%= form_for @band, html: {
    class: "needs-validation",
    "data-controller": "form-validation",
    "data-form-validation-target": "form",
    "data-form-validation-submitting-text-value": "Creating..."
  } do |f| %>
    <div class="form-group mb-3">
      <%= f.label :name, "Band Name", class: "text-white" %> 
      <%= f.text_field :name, class: "form-control", placeholder: "Enter band name", required: true, id: "band_name", "aria-label": "Band name", tabindex: 1 %>
    </div>

    <div class="form-group mb-3">
      <%= f.label :photo_url, "Photo URL", class: "text-white" %> 
      <%= f.url_field :photo_url, class: "form-control", placeholder: "Enter photo URL (optional)", id: "band_photo_url", "aria-label": "Band photo URL", tabindex: 2 %>
    </div>

    <div class="form-group mb-3">
      <%= f.label :bio, "Biography", class: "text-white" %> 
      <%= f.text_area :bio, class: "form-control", rows: 4, placeholder: "Enter band biography", maxlength: "1000", id: "band_bio", "aria-label": "Band biography", tabindex: 3 %>
    </div>

    <div class="mt-4">
      <%= f.submit "Create", class: "btn btn-primary", "aria-label": "Create new band", tabindex: 4 %>
      <%= link_to "Cancel", bands_path, class: "btn btn-secondary ms-2", "aria-label": "Cancel band creation and return to bands list", tabindex: 5 %>
    </div>
  <% end %>
</div>
<div class="container mt-4">
  <div class="card shadow">
    <div class="card-body">
      <h1 class="card-title mb-4"><%= @event.name %></h1>
      
      <div class="row mb-3">
        <div class="col-md-4">
          <p><strong>Date:</strong> <%= @event.date.strftime("%B %d, %Y") %></p>
        </div>
        <div class="col-md-4">
          <p><strong>Venue:</strong> <%= @event.venue %></p>
        </div>
        <div class="col-md-4">
          <p><strong>Location:</strong> <%= @event.location %></p>
        </div>
      </div>
      
      <div class="mt-4">
        <h2>Lineup</h2>
        <% if @bands.any? %>
          <div class="row">
            <% @bands.each do |band| %>
              <div class="col-md-6 mb-3">
                <div class="card h-100">
                  <div class="card-body">
                    <h5 class="card-title">
                      <%= link_to band.name, band_path(band), class: "text-decoration-none" %>
                    </h5>
                    <p class="card-text"><%= band.bio %></p>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="alert alert-info">No bands have been announced yet.</div>
        <% end %>
      </div>
      
      <div class="mt-4 btn-group">
        <%= link_to "Back to all events", events_path, class: "btn btn-secondary" %>
        <%= link_to "Edit Event", edit_event_path(@event), class: "btn btn-primary ms-2" %>
        <%= button_to "Delete Event", event_path(@event), method: :delete, 
            class: "btn btn-danger ms-2", 
            data: { confirm: "Are you sure you want to delete this event?" } %>
      </div>
    </div>
  </div>
</div>
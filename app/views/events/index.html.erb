<div class="d-flex justify-content-between align-items-center my-4">
  <h1 class="m-0">All Events</h1>
  <%= link_to "View as Calendar", calendar_events_path, class: "btn btn-outline-primary", data: { turbo: false } %>
</div>

<div class="container">
  <% @events.each do |event| %>
    <div class="card mb-4 shadow-sm">
      <div class="card-body">
        <h3 class="card-title">
          <%= link_to event.name, event_path(event), class: "text-decoration-none text-primary" %>
        </h3>
        <p class="card-text"><strong><%= event.date.strftime("%B %d, %Y") %></strong></p>
        <p class="card-text"><%= "#{event.venue}, #{event.location}" %></p>
        <p class="card-text text-muted">Featuring <%= event.bands.count %> bands</p>
      </div>
    </div>
  <% end %>

  <div class="text-center">
    <%= link_to "Add New Event", new_event_path, class: "btn nav-button" %>
  </div>
</div>

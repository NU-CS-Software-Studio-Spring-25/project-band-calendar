<div class="container mt-4">
  <h1>Edit Event</h1>

  <%= render 'shared/flash_messages' %>

  <%= form_for @event, html: {
    class: "needs-validation", 
    "data-controller": "form-validation", 
    "data-form-validation-target": "form",
    "data-form-validation-submitting-text-value": "Updating..."
  } do |f| %>
    <div class="form-group mb-3">
      <%= f.label :name, "Event Name" %>
      <%= f.text_field :name, class: "form-control", placeholder: "Enter event name", required: true, id: "event_name", "aria-label": "Event name" %>
    </div>
    
    <div class="form-group mb-3">
      <%= f.label :venue_id, "Venue" %>
      <%= f.collection_select :venue_id, @venues, :id, :name, { prompt: "Select venue" }, { class: "form-select", required: true, id: "event_venue_id", "aria-label": "Select venue for event" } %>
    </div>
    
    <div class="form-group mb-3">
      <%= f.label :date, "Date & Time" %>
      <%= f.date_field :date, class: "form-control datetimepicker", placeholder: "Select date and time", required: true, id: "event_date", min: Date.current.strftime("%Y-%m-%d"), "aria-label": "Event date and time" %>
    </div>
    
    <div class="form-group mb-4">
      <label class="form-label">Bands</label>
      
      <%= render 'events/band_selection', bands: @event.bands.map { |band| { id: band.id, name: band.name, image_url: band.photo_url } } %>
    </div>
    
    <%= render 'events/band_times_fields' %>
    
    <div class="mt-4">
      <%= f.submit "Update", class: "btn btn-primary", "aria-label": "Update event #{@event.name}" %>
      <%= link_to "Cancel", event_path(@event), class: "btn btn-secondary ms-2", "aria-label": "Cancel event editing and return to #{@event.name} details" %>
    </div>
  <% end %>

<div class="container mt-4">
  <h1>Edit Venue</h1>

  <%= render 'shared/flash_messages' %>

  <%= form_for @venue, html: {class: "needs-validation"} do |f| %>
    <div class="row">
      <div class="col-md-6">
        <div class="form-group mb-3">
          <%= f.label :name, "Venue Name" %>
          <%= f.text_field :name, class: "form-control", placeholder: "Enter venue name", required: true %>
        </div>
        
        <div class="form-group mb-3">
          <%= f.label :venue_type, "Venue Type" %>
          <%= f.select :venue_type, [
            ["Concert Hall", "Concert Hall"], 
            ["Bar", "Bar"], 
            ["Club", "Club"],
            ["Theater", "Theater"],
            ["Stadium", "Stadium"],
            ["Outdoor", "Outdoor"],
            ["Other", "Other"]
          ], { prompt: "Select venue type" }, { class: "form-select" } %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :street_address, "Street Address" %>
          <%= f.text_field :street_address, class: "form-control", placeholder: "Enter street address" %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :city, "City" %>
          <%= f.text_field :city, class: "form-control", placeholder: "Enter city", required: true %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :state, "State/Province" %>
          <%= f.text_field :state, class: "form-control", placeholder: "Enter state or province" %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :postal_code, "Postal Code" %>
          <%= f.text_field :postal_code, class: "form-control", placeholder: "Enter postal code" %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :country, "Country" %>
          <%= f.text_field :country, class: "form-control", placeholder: "Enter country", required: true %>
        </div>
      </div>
      
      <div class="col-md-6">
        <div class="form-group mb-3">
          <%= f.label :capacity, "Capacity" %>
          <%= f.number_field :capacity, class: "form-control", placeholder: "Enter venue capacity" %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :website, "Website" %>
          <%= f.url_field :website, class: "form-control", placeholder: "Enter venue website" %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :phone, "Phone" %>
          <%= f.telephone_field :phone, class: "form-control", placeholder: "Enter phone number" %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :email, "Email" %>
          <%= f.email_field :email, class: "form-control", placeholder: "Enter email address" %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :description, "Description" %>
          <%= f.text_area :description, class: "form-control", placeholder: "Enter venue description", rows: 4 %>
        </div>
        
        <div class="form-group mb-3">
          <div class="form-check form-check-inline">
            <%= f.check_box :accessible, class: "form-check-input" %>
            <%= f.label :accessible, "Accessible", class: "form-check-label" %>
          </div>
          
          <div class="form-check form-check-inline">
            <%= f.check_box :all_ages, class: "form-check-input" %>
            <%= f.label :all_ages, "All Ages", class: "form-check-label" %>
          </div>
          
          <div class="form-check form-check-inline">
            <%= f.check_box :has_food, class: "form-check-input" %>
            <%= f.label :has_food, "Food Available", class: "form-check-label" %>
          </div>
          
          <div class="form-check form-check-inline">
            <%= f.check_box :has_bar, class: "form-check-input" %>
            <%= f.label :has_bar, "Bar Available", class: "form-check-label" %>
          </div>
        </div>
      </div>
    </div>
    
    <div class="mt-4">
      <%= f.submit "Update", class: "btn btn-primary px-4" %>
      <%= link_to "Cancel", venue_path(@venue), class: "btn btn-secondary ms-2" %>
    </div>
  <% end %>
</div> 
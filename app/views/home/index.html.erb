
<div class="welcome-section">
  <h1>Welcome to NoteSync</h1>
  <p>Your home for managing bands and events</p>

  <div class="auth-links">
    <% if user_signed_in? %>
      <p>Welcome, <%= current_user.email %></p>
    <% end %>
  </div>

  <div class="links mt-3">
    <%= link_to "View Bands", bands_path, class: "nav-link nav-button" %>
    <%= link_to "View Events", events_path, class: "nav-link nav-button ms-2" %>
  </div>
</div>
<div class="auth-page">
  <h2 class="text-white text-center mb-4">Log in</h2>

  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="mb-3">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, autofocus: true, class: "form-control", "aria-label": "Email address" %>
          </div>

          <div class="mb-3">
            <%= f.label :password, class: "form-label" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control", "aria-label": "Password" %>
          </div>

          <div class="mb-3 form-check">
            <%= f.check_box :remember_me, class: "form-check-input", "aria-label": "Remember me on this device" %>
            <%= f.label :remember_me, class: "form-check-label" %>
          </div>

          <%= f.submit "Log in", class: "btn custom-login-btn w-100", "aria-label": "Log in to account" %>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
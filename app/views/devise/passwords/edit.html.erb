<div class="auth-page">
  <h2 class="text-white text-center mb-4">Change your password</h2>

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>

          <div class="mb-3">
            <%= f.label :password, "New password", class: "form-label" %>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control", "aria-label": "New password", tabindex: 1 %>
            <% if @minimum_password_length %>
              <small class="form-text text-muted">
                (<%= @minimum_password_length %> characters minimum)
              </small>
            <% end %>
          </div>

          <div class="mb-3">
            <%= f.label :password_confirmation, "Confirm new password", class: "form-label" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", "aria-label": "Confirm new password", tabindex: 2 %>
          </div>

          <div class="mb-3">
            <%= f.submit "Change my password", class: "btn custom-login-btn w-100", "aria-label": "Change password", tabindex: 3 %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
